<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Result"
            android:textSize="60dp"
            android:gravity="right"
            android:layout_marginTop="60dp"
            android:id="@+id/result_txt"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/blue_shape"
                android:textColor="#ffff"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:text="AC"
                android:textSize="50dp"
                android:id="@+id/btn_delet"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="bk"
                android:textSize="50dp"
                android:background="@drawable/blue_shape"
                android:layout_marginBottom="16dp"

                android:layout_marginRight="16dp"


                android:id="@+id/btn_backk"
                android:textColor="#ffff"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="50dp"
                android:id="@+id/btn_perce"
                android:background="@drawable/blue_shape"
                android:layout_marginBottom="16dp"

                android:layout_marginRight="16dp"


                android:textColor="#ffff"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="50dp"
                android:id="@+id/btn_divisionn"
                android:background="@drawable/blue_f_shape"
                android:layout_marginBottom="16dp"


                android:textColor="#ffff"

                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:background="@drawable/gray_shape"
                android:textSize="50dp"
                android:id="@+id/btn_seven"
                android:layout_marginBottom="16dp"

                android:layout_marginRight="16dp"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="50dp"
                android:background="@drawable/gray_shape"
                android:layout_marginBottom="16dp"

                android:id="@+id/btn_eight"
                android:layout_marginRight="16dp"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="50dp"
                android:background="@drawable/gray_shape"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"

                android:id="@+id/btn_nine"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="50dp"
                android:id="@+id/btn_multiple"
                android:background="@drawable/blue_f_shape"
                android:layout_marginBottom="16dp"

                android:textColor="#ffff"

                android:layout_weight="1" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="50dp"
                android:id="@+id/btn_foor"
                android:background="@drawable/gray_shape"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="50dp"
                android:id="@+id/btn_five"
                android:layout_weight="1"
                android:background="@drawable/gray_shape"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"


                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="50dp"
                android:id="@+id/btn_sexe"
                android:background="@drawable/gray_shape"
                android:layout_marginBottom="16dp"

                android:layout_weight="1"
                android:layout_marginRight="16dp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="50dp"
                android:id="@+id/btn_substraction"
                android:background="@drawable/blue_f_shape"
                android:layout_marginBottom="16dp"

                android:textColor="#ffff"

                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="50dp"
                android:id="@+id/btn_one"
                android:layout_weight="1"
                android:background="@drawable/gray_shape"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"


                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="50dp"
                android:id="@+id/btn_two"
                android:background="@drawable/gray_shape"
                android:layout_marginRight="16dp"

                android:layout_marginBottom="16dp"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:background="@drawable/gray_shape"
                android:layout_marginBottom="16dp"

                android:textSize="50dp"
                android:id="@+id/btn_three"
                android:layout_marginRight="16dp"

                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="50dp"
                android:background="@drawable/blue_f_shape"
                android:layout_marginBottom="16dp"

                android:textColor="#ffff"

                android:id="@+id/btn_add"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="0">


            <Button
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="50dp"
                android:id="@+id/btn_zero"
                android:background="@drawable/gray_shape"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"


                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="."
                android:textSize="50dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/gray_shape"
                android:layout_marginBottom="16dp"

                android:id="@+id/btn_dot"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="50dp"
                android:textColor="#ffff"

                android:id="@+id/btn_equals"
                android:background="@drawable/blue_f_shape"
                android:layout_marginBottom="16dp"

                android:layout_weight="1" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>